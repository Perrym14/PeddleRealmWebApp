@using PeddleRealmWebApp.Models
@model IEnumerable<PeddleRealmWebApp.Models.Item>
@{
    ViewBag.Title = "Index";
}

<h2 style="text-align: center">Items for sell</h2>
<div class="sidebar">
    @{ Html.RenderAction("ItemTypeMenu", "Store"); }
</div>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row" id="itemRow">

            @foreach(var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="/Content/Images/UserPhotos/@item.ItemPhoto" alt="Card image cap" height="200px" width="50%" display="block">
                        <div class="card-body" id="itemCardBody">
                            <h4>@item.Name</h4>
                            <h5>@item.Price</h5>
                            <p>@item.Description</p>
                            <div class="container">
                                <a href="@Url.Action("Details", "Items", new {id = item.Id})" class="btn btn-primary" id="itemCardButton">View Details</a>    
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

