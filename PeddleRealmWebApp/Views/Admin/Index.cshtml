@model IEnumerable<PeddleRealmWebApp.Models.Item>
@{
    ViewBag.Title = "Index";
}
<meta content="width-device-width, initial-scale=1"/>

<h2>Welcome Admin.</h2>
@Html.ActionLink("Add new item for sale.", "Create")

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row" id="itemRow">

            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm" style="width: 18rem;">
                        <img class="card-img-top" src="/Content/Images/UserPhotos/@item.ItemPhoto" alt="Card image cap" height="100px" width="100px">
                        <div class="card-body" id="itemCardBody">
                            <div class="card-text">
                                <h4>@item.Name</h4>
                                <h5>@item.Price</h5>
                            </div>
                            <div class="card-text">
                                <p>@item.Description</p>
                            </div>
                            <a href="@Url.Action("Details", "Admin", new {id = item.Id})" class="btn btn-primary" id="itemCardButton">View Details</a>
                        </div>
                    </div>
                </div>
                    }
          </div>          
    </div>

</div>


